<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= render(post) %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, id: "new_link", data: { remote: true }  %>


